@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MvcEcommerce</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway:300,400,700,800">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MvcEcommerce.styles.css" asp-append-version="true" />
</head>
<body>

    <div class="container m-4">
        <div class="card mx-auto" style="width:500px;">
            <div class="card-header">
                @ViewBag.Greeting @ViewBag.UserName, Nasılsın?
            </div>
            <div class="card-body">
                <p class=".card-text">Umarım kurslarımızdan memnunsuznuzdur...</p>
                <a asp-action="apply" asp-controller="course" class="btn btn-primary">Başvuru Yap</a>

            </div>
        </div>

    </div>
</body>

</html>