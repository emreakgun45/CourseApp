@model Student

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Apply</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway:300,400,700,800">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MvcEcommerce.styles.css" asp-append-version="true" />
</head>
<body>

    <div class="container m-4">
        <div class="card mx-auto" style="width:500px;">
            <div class="card-header">
                Başvuru Formu
            </div>
            <div class="card-body">
                <form asp-action="apply">
                    <div asp-validation-summary="All"></div>

                    <div class="form-group">
                        <label asp-for="Name">Adınız</label>
                        <input asp-for="Name" class="form-control">
                    </div>
                    <div class="form-group">
                        <label asp-for="Surname">Soyadınız</label>
                        <input asp-for="Surname" class="form-control">
                    </div>
                    <div class="form-group">

                        <label asp-for="Email">Eposta</label>
                        <input asp-for="Email" class="form-control">
                    </div>
                    <div class="form-group">

                        <label asp-for="Phone">Telefon</label>
                        <input asp-for="Phone" class="form-control">
                    </div>
                    <div class="form-group">

                        <label asp-for="Confirm">Kursa katılacak mısınız?</label>
                        <select asp-for="Confirm" class="form-control">
                            <option value="">Seçiniz</option>
                            <option value="true">Evet geliyorum</option>
                            <option value="false">Hayır gelmiyorum</option>

                        </select>

                    </div>
                    <input type="submit" value="Submit" class="btn btn-primary" />
                </form>

            </div>
        </div>

    </div>






</body>

</html>
